// This test demonstrates that after can be used on connections with ports that
// have no types.
target TypeScript {
    fast: false,
    timeout: 3 sec
}

reactor Foo {
    input x

    output y

    reaction(x) -> y {=
        // Do something
    =}
}

reactor Print {
    input x

    state expected_time: time(10 msec)

    reaction(x) {=
        // Do something
    =}
}

main reactor {
    timer t(0, 1 sec)

    f = new Foo()
    p = new Print()

    f.y -> p.x after 10 msec

    reaction(t) -> f.x {=
        // Do something
    =}
}
