target C

reactor Passthrough {
    input in: int
    output out: int
    reaction(in) -> out {=
        lf_print("Hello from passthrough");
        lf_set(out, in->value);
    =}
}

reactor Twisty {
    input in0: int
    input in1: int
    output out0: int
    output out1: int
    p0 = new Passthrough()
    p1 = new Passthrough()
    in0 -> p0.in
    p0.out -> out0
    in1 -> p1.in
    p1.out -> out1
}

federated reactor {
    t0 = new Twisty()
    t1 = new Twisty()
    t0.out1 -> t1.in0
    t1.out1 -> t0.in0
    reaction(startup) -> t0.in1 {=
        lf_set(t0.in1, 0);
    =}
}
