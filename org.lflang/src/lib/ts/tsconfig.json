{
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true,
        "target": "esnext",
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "typeRoots": ["./node_modules/@types/", "./node_modules/reactor-ts/src/core"]
    },
    "include": [
        "src/**/*"
    ]
}
